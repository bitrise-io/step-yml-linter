// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build_and_run",
            "problemMatcher": "$tsc-watch",
            "isBackground": false,
            "presentation": {
                "reveal": "never"
            },
            "options": {
                "cwd": "${workspaceFolder}/.vscode/extension",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}